.body-bg{position:fixed;top:0;left:0;bottom:0;right:0;background-image:linear-gradient(-170deg,rgba(128,128,128,0),rgba(81,161,255,0.5) 80%);z-index:-1}header{padding-top:2rem}header h1{margin:0 0 .25rem;height:1.6rem;width:3.2rem;background-image:url(/svg/jota.svg);background-repeat:no-repeat;background-size:2.75rem}header h1 span{font-weight:500;display:none}header h2{margin:0;padding:0;font-size:1.2rem;white-space:nowrap;color:#51a1ff}header nav li{margin:0 .25rem;font-family:Oswald,sans-serif}header nav li.on-page a{color:#001c64}header nav li.on-page a:hover{color:#fff;background-color:#001c64}header nav li a{font-weight:400;font-size:1.1rem;text-transform:uppercase}header nav li a.icon span{display:none}header nav li a.icon svg{margin:-.125rem;width:1.5rem;height:1.5rem;fill:#900fe8}header nav li a.icon:hover svg{fill:#fff}h4{color:#001c64}blockquote{position:relative}blockquote:before{position:absolute;left:-2rem;height:100%;content:'';border-left:.5rem solid rgba(128,128,128,.25)}blockquote p{font-family:serif;font-size:1.5rem}section{color:rgba(0,0,0,.8)}section.labelled h3{color:#51a1ff}section.focus{color:rgba(255,255,255,.8);background-color:#001c64}section.focus h4{color:#fff}section.focus .column.secondary h4{color:#51a1ff}.product:not(.hero) .image-mask{border-bottom-color:#51a1ff}.product.hero h5{color:#fff}.product.hero .text-inner{display:flex;flex-direction:column;justify-content:space-between;align-items:flex-start;color:#51a1ff}@media screen and (min-width:768px){.product.hero .text-inner{flex-direction:row;align-items:center;font-size:1.3rem}.product.hero .text-inner a{margin-left:2rem}}.product.hero .text-mask-bg{background-color:#03102f;box-shadow:0 0 1rem rgba(0,0,0,.75)}a{display:inline-flex;align-items:center;padding:.5rem;margin-left:-.5rem;text-decoration:none;color:#900fe8;fill:#900fe8;border-radius:.25rem;transition:color .25s ease-in-out,background-color .25s ease-in-out}p a:not(.product-link){padding:0 .25rem;margin:0;font-family:inherit}a:hover{color:#fff;fill:#fff;background-color:#900fe8}a.product-link{display:inline-flex;margin:.5rem 0;padding:.5rem 1rem .875rem;font-family:Oswald,sans-serif;font-size:1.75rem;line-height:1.75rem;font-weight:300;border-radius:.5rem}a.product-link .icon{margin:.3rem .5rem 0 -1rem;width:2rem;height:2rem;fill:#900fe8;transition:fill .25s ease-in-out}a.product-link .icon rect{transition:width .125s ease-in-out,x .125s ease-in-out}a.product-link:hover .icon{fill:#fff}a.product-link:hover .icon rect{width:0;x:17px}footer{font-size:1.25rem}footer .links{margin-top:2.25rem}