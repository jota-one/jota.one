footer {
  display: flex;
  align-items: center;
  margin-bottom: 2rem;

  ul {
    list-style: none;
    padding: 0 0 0 1rem;
    margin: 0;
    display: flex;

    li {
      margin-right: 1rem;

      &:last-child {
        margin-right: 0;
      }
    }

    a {
      transition: color 0.5s ease;

      &:hover {
        color: var(--c-primary);
      }
    }

    svg {
      width: 2rem;
      height: 2rem;
    }
  }
}