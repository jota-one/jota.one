main {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin: -2rem auto 0;
  padding-top: 2rem;
  max-width: 100%;
  overflow: hidden;
  z-index: 0;
  opacity: 0;

  &.ready {
    opacity: 1;
  }

  .container {
    transition: transform 0.5s ease;

    body.navigate & {
      transform: translateX(var(--s-nav-handler-width));
    }
  }

  .row {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 2rem;
    
    body:not(.theme-home) & {
      @media (--l) {
        grid-template-columns: 1fr 1fr;
        grid-gap: 2rem 4rem;
      }
    }
  }

  .container {
    &.center-h .col,
    &.center-v .col {
      display: flex;
      flex-direction: column;
    }

    &.center-h .col {
      align-items: center;
    }

    &.center-v .col {
      justify-content: center;
    }

    &:empty {
      margin: 0;
      padding: 0;
    }
  }

