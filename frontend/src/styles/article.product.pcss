article.product {
  #aside {
    width: 25%;
    padding-right: 2.5rem;
  }

  .product-meta {
    margin: -1rem 0 0 0;
    padding: 0;

    dd,
    dt {
      margin: 0;
    }

    dt {
      font-size: 0.75rem;
      opacity: 0.75;
    }

    dd {
      margin-bottom: 1rem;
      font-size: 1rem;
      font-weight: 900;
    }
  }
}